
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faFacebook } from '@fortawesome/free-brands-svg-icons';
import { faInstagram } from '@fortawesome/free-brands-svg-icons';
import { faTiktok } from '@fortawesome/free-brands-svg-icons';
import { Link } from 'react-router-dom';
import { sections } from '../../../utils/sections';
import { useEffect, useRef, useState } from 'react';
import './footer.css';

export default function Footer() {
  const fbRef = useRef<HTMLLinkElement>(null);
  const igRef = useRef<HTMLLinkElement>(null);
  const ttRef = useRef<HTMLLinkElement>(null);

  const [fbRefIsVisible, setFbRefIsVisible] = useState(false);
  const [igRefIsVisible, setIgRefIsVisible] = useState(false);
  const [ttRefIsVisible, setTtRefIsVisible] = useState(false);

  useEffect(() => {
    const observer1 = new IntersectionObserver((entries) => {
      const entry = entries[0];
      setFbRefIsVisible(entry.isIntersecting);
    });
    observer1.observe(fbRef.current!);

    const observer2 = new IntersectionObserver((entries) => {
      const entry = entries[0];
      setIgRefIsVisible(entry.isIntersecting);
    });
    observer2.observe(igRef.current!);

    const observer3 = new IntersectionObserver((entries) => {
      const entry = entries[0];
      setTtRefIsVisible(entry.isIntersecting);
    });
    observer3.observe(ttRef.current!);

    return () => {
      observer1.disconnect();
      observer2.disconnect();
      observer3.disconnect();
    };
  }, []);

  return (
    <footer className='relative bg-black flex flex-col items-center justify-center text-white'>
      {/* ICONS */}
      <div>
        <div className='flex gap-5 text-5xl p-10'>
          <a
            className={`${fbRefIsVisible ? 'showIcon' : 'hideIcon'}`}
            ref={fbRef}
            target='_blank'
            rel='noopener noreferrer'
            href='https://www.facebook.com/hvppytattoo'
          >
            <FontAwesomeIcon
              icon={faFacebook}
              style={{ color: '#FFF' }}
              className={`hover:scale-125 transition-all`}
            />
          </a>
          <a
            className={`${igRefIsVisible ? 'showIcon' : 'hideIcon'}`}
            ref={igRef}
            target='_blank'
            rel='noopener noreferrer'
            href='https://www.instagram.com/hvppy_tattoo/'
          >
            <FontAwesomeIcon
              icon={faInstagram}
              style={{ color: '#FFF' }}
              className='hover:scale-125 transition-all'
            />
          </a>
          <a
            className={`${ttRefIsVisible ? 'showIcon' : 'hideIcon'}`}
            ref={ttRef}
            target='_blank'
            rel='noopener noreferrer'
            href='https://www.tiktok.com/@hvppy_art?lang=pl-PL'
          >
            <FontAwesomeIcon
              icon={faTiktok}
              style={{ color: '#FFF' }}
              className='hover:scale-125 transition-all'
            />
          </a>
        </div>
      </div>
      {/* ICONS END */}
      {/* SECTION LINKS */}
      <div>
        <ul className='flex flex-row gap-6 pb-10'>
          <li>
            <Link to='/'>{sections[0].sectionName}</Link>
          </li>
          <li>
            <Link to='/'>{sections[1].sectionName}</Link>
          </li>
          <li>
            <Link to='/'>{sections[2].sectionName}</Link>
          </li>
        </ul>
      </div>
      {/* SECTIONS LINKS END */}
    </footer>
  );
}
